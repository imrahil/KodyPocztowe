<?xml version="1.0"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark">

    <s:layout>
        <s:VerticalLayout paddingTop="20" paddingBottom="20" paddingLeft="20" paddingRight="20"/>
    </s:layout>

    <fx:Script>
        <![CDATA[
        import org.osflash.signals.Signal;

        public var searchSignal:Signal = new Signal();

        private function zipCodeTxt_keyDownHandler(event:KeyboardEvent):void
        {
            if (zipCodeTxt.text != "" && event.charCode == 13)
            {
                searchZipCode();
            }
        }

        private function searchZipCode():void
        {
            searchSignal.dispatch(zipCodeTxt.text);
        }
        ]]>
    </fx:Script>

    <s:navigationContent>
        <s:Button label="Wróć" click="navigator.popView()"/>
    </s:navigationContent>

    <s:HGroup width="100%" horizontalAlign="center" verticalAlign="middle">
        <s:TextInput id="zipCodeTxt" width="200" fontSize="22" text="87-100" restrict="0-9\-"
                     keyDown="zipCodeTxt_keyDownHandler(event)"/>
        <s:Button label="Szukaj" click="searchZipCode()" fontSize="22"/>
    </s:HGroup>

    <s:TextArea id="outputTxt" width="100%" height="100%"/>
</s:View>
